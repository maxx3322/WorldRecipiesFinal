@model HomeViewModel;
@{
    ViewData["Title"] = "Home Page";
}

    <div class="container">
        <div class="row">
            <p>
                Hi this is a new wesiote that will take the countries and provied a recipie based on the country you have selected. 
                .If you want to select a new country please choose one from the list below. 
                We are happy you have joined our list of countires
                blalslaldllda
                helooo would you like to submit a recipie for thje website. 
            </p>
        </div>
        <div class="row">
            <div class="col-6">

                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Dropdown button
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        @foreach (var country in Model.Countries)
                        {

                        <a class="dropdown-item" href="https://localhost:44318/Countries/Index/@country.CountryId">@country.CountryName </a>


                        }
                    </div>
                        
                </div>

            </div>

            <div class="col-6">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="" alt=@Model.SelectedCountryTwo.RecipieName>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="" alt=@Model.SelectedCountry.RecipieName>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="" alt=@Model.SelectedCountryThree.RecipieName>
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>

        </div>

    </div>


